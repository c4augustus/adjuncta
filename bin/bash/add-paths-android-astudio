#!/bin/sh
case $(uname) in
    Darwin)
        export ANDROID_HOME=$HOME/Library/Android/sdk
        export ASTUDIO_HOME="/Applications/Android Studio.app/Contents"
        export JAVA_HOME=$ASTUDIO_HOME/jre/Contents/home
        export NDK_HOME=$ANDROID_HOME/ndk-bundle
        ;;
    *) # assume "Linux"
        ;;
esac
#. add-paths-android
