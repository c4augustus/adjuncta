#!/bin/sh

export NVPACK_NDK_VERSION="android-ndk-r15c"
export NVPACK_NDK_TOOL_VERSION="4.9"
export NVPACK_ROOT="/Users/admin/u/run/nvidia/NVPACK"
export ANDROID_HOME=$NVPACK_ROOT"/android-sdk-macosx"
