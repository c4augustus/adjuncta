#!/bin/sh
export PATH_RUN_CHIBI=$PATH_RUN/chibi
export PATH_RUN_CHIBI_BIN=$PATH_RUN_CHIBI/bin
export PATH_RUN_CHIBI_LIB=$PATH_RUN_CHIBI/lib
export PATH_RUN_CHIBI_LIB_CHIBI=$PATH_RUN_CHIBI_LIB/chibi
export PATH_RUN_CHIBI_LIBS=$PATH_RUN_CHIBI_LIB_CHIBI:$PATH_RUN_CHIBI_LIB
export PATH=$PATH_RUN_CHIBI_BIN:$PATH
case $(uname) in
  Darwin) # NOTE: this may not work or be necessary with newer macOS due to its SIP
    export DYLD_LIBRARY_PATH=$PATH_RUN_CHIBI_LIBS:$DYLD_LIBRARY_PATH
    ;;
  *) # assume POSIX
    export LD_LIBRARY_PATH=$PATH_RUN_CHIBI_LIBS:$LD_LIBRARY_PATH
    ;;
esac
export CHIBI_MODULE_PATH=$PATH_RUN_CHIBI/share/chibi
