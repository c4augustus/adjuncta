#!/bin/sh
export PATH_RUN_IDRIS=$PATH_RUN/idris2
export PATH_RUN_IDRIS_BIN=$PATH_RUN_IDRIS/bin
export PATH=$PATH_RUN_IDRIS_BIN:$PATH
case $(uname) in
  Darwin)
    # needed to find gmp installed by MacPorts when building Idris2 and compiling Idris2 to C
    export CPATH=/opt/local/include
    export IDRIS2_LIBS=/opt/local/lib
    ;;
  *) # assume POSIX
    ;;
esac
