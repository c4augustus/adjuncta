## based on beach/build/make_include_platform
export SDK=MacOSX
export SDK_VER=10.7
export PATH_XCODE=/Applications/Xcode.app
export PATH_XCODE_CONTENTS=$PATH_XCODE/Contents
export PATH_XCODE_DEVELOPER=$PATH_XCODE_CONTENTS/Developer
export PATH_XCODE_PLATFORMS=$PATH_XCODE_DEVELOPER/Platforms
export PATH_XCODE_SDK=$PATH_XCODE_PLATFORMS/$SDK.platform/Developer/SDKs/$SDK$SDK_VER.sdk
export PATH_XCODE_LIB=$PATH_XCODE_SDK/usr/lib
export PATH_XCODE_TOOLCHAINS=$PATH_XCODE_DEVELOPER/Toolchains
export PATH_XCODE_TOOLCHAIN=$PATH_XCODE_TOOLCHAINS/XcodeDefault.xctoolchain
##
export PATH_XCODE_DEVELOPER_USR=$PATH_XCODE_DEVELOPER/usr
export PATH_XCODE_TOOLCHAIN_USR=$PATH_XCODE_TOOLCHAIN/usr
export PATH_XCODE_DEVELOPER_BIN=$PATH_XCODE_DEVELOPER_USR/bin
export PATH_XCODE_TOOLCHAIN_BIN=$PATH_XCODE_TOOLCHAIN_USR/bin
echo "PATH_XCODE_DEVELOPER_BIN=="$PATH_XCODE_DEVELOPER_BIN
echo "PATH_XCODE_TOOLCHAIN_BIN=="$PATH_XCODE_TOOLCHAIN_BIN
if [[ (! -d $PATH_XCODE_DEVELOPER_BIN) || (! -d $PATH_XCODE_TOOLCHAIN_BIN) ]]; then
  echo "bin paths not found"
  exit
fi
##
export PATH=$PATH_XCODE_DEVELOPER_BIN:$PATH_XCODE_TOOLCHAIN_BIN:$PATH
echo "PATH=="$PATH
export LIBRARY_PATH=$PATH_XCODE_LIB
echo "LIBRARY_PATH=="$LIBRARY_PATH
export DYLD_LIBRARY_PATH=$LIBRARY_PATH
echo "DYLD_LIBRARY_PATH=="$DYLD_LIBRARY_PATH
echo "symlinking /usr/lib/system/libdnsinfo.dylib"
sudo ln -f -s $LIBRARY_PATH/system/libdnsinfo.dylib /usr/lib/system
##
