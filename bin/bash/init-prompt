#!/bin/bash

# customize bash prompt
# orginally by Steve Bennett
# modified by Christopher 1999.11.23

# red       31
# green     32
# yellow    33
# blue      34
# magenta   35
# cyan      36
# white     37

if [ -z "$HOSTNAME" ]; then
  HOSTNAME=`hostname`
fi
case "$HOSTNAME" in
  julian*) COLOR=32;;
  mandor*) COLOR=33;;
  *)       COLOR=34;;
esac

case $TERM in
  xterm-256color) # macOS and WSL
    X="[${COLOR}m"
    Y="[m"
    echo -n "]0;$HOSTNAME"
    ;;
  # TODO: ### ALL BELOW ARE ANCIENT SETTINGS, DO THEY EVEN EXIST ANYMORE?
  ansi)
    X="[${COLOR};1m"
    Y="[37;0m"
    TERM=ansi
    ;;
  linux)
    	B="`tput rmso``tput sgr0`"
    	U=`tput bold`
    	H=`tput bold`
    	P=`tput bold`
    	D=`tput bold`
    ;;
  xansi)
    X="[${COLOR};1m"
    Y="[37m"
    TERM=ansi
    ;;
  xterm)
    	B="`tput rmso``tput sgr0`"
    	U=`tput bold`
    	H=`tput bold`
    	P=`tput bold`
    	D=`tput bold`
    ;;
  xterm-color)
    X="[${COLOR}m"
    Y="[m"
    echo -n "]0;$HOSTNAME"
    ;;
  *)
    X=
    Y=
    ;;
esac

NOPCH=`tput rmpch`

#case "$BASH_VERSION" in
#  2.*)    O='\['; C='\]';;
#  1.*|*)  O=''; C='';;
#esac

# Don"t use \[ \] since readline() does very poorly at updating the display
#PS1="${NOPCH}\n$O$B$C<$O$U$C\u$O$B$C@$O$H$C\h$O$B$C($O$P$C\!$O$B$C):$O$D$C\w$O$B$C>\n$O$Y$C"

#PROMPT='%F{yellow}%n@%m%f %F{white}%~%f %# '
PROMPT='%F{yellow}%n@%m%f %F{white}%f%# '
