if [ "$PATH_EXE" = "" ]; then
  echo "Failed because PATH_EXE is not defined."
  exit 1
fi
cd $PATH_EXE
PATH_REPO="$PATH_EXE/gmp"
PATH_LIB="$PATH_REPO/.libs"
FILE_LIB="libgmp.a"
if [ ! -d $PATH_REPO ]; then
  git clone -v git@gitlab.com:aboa/gmp
fi
if [ ! -f $PATH_LIB/$FILE_LIB ] || [ "${*%force}" != "$*" ]; then
  cd $PATH_REPO
  git checkout v6.3.0
  ./configure --prefix $(pwd)
  make
fi
